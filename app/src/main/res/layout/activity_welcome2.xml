<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".welcome2Activity"
    android:background="@drawable/background_gradian4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background_gradian4"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/txtAnim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:text="Reducing Waste, Nourishing Lives"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:alpha="0"
                        android:visibility="visible"
                    tools:ignore="HardcodedText" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="16dp"
                android:background="#AF8F6F">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="16dp"
                        android:text="Welcome to Donate Dine, where we connect the generosity of hotels with the needs of those in care facilities. We believe in ensuring that good food doesn't go to waste and that it can make a real difference in the lives of others."
                        android:textAlignment="center"
                        android:textColor="#543310"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        tools:ignore="HardcodedText,VisualLintLongText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/background_gradian4"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How Donate Dine Works"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="16dp"
                        android:textAlignment="center"
                        tools:ignore="HardcodedText" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="16dp"
                android:background="#AF8F6F">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:text="Step 1: Donation"
                        android:textAlignment="center"
                        android:textColor="#543310"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ngo2"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="We make it easy for hotels to donate their excess food and for care facilities to receive it."
                        android:textAlignment="center"
                        android:textColor="#543310"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="16dp"
                android:background="#AF8F6F">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Step 2: Collection"
                        android:textStyle="bold"
                        android:textColor="#543310"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:paddingBottom="8dp"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:src="@drawable/tract2"
                        android:scaleType="fitCenter"
                        android:padding="16dp"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our team arrives to collect the food, ensuring it is transported safely."
                        android:textAlignment="center"
                        android:textColor="#543310"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="32dp"
                android:background="#AF8F6F">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView201"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Step 3: Distribution"
                        android:textStyle="bold"
                        android:textColor="#543310"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:paddingBottom="8dp"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:src="@drawable/distribution"
                        android:scaleType="fitCenter"
                        android:padding="16dp"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/textView202"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="The food is delivered to care facilities, where it is served to those in need."
                        android:textAlignment="center"
                        android:textColor="#543310"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_gravity="center"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="243dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/background_gradian4"
                android:text="Get Involved"
                android:onClick="rnej"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
